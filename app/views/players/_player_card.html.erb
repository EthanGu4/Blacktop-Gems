<% abbr = player.team_abbreviation.to_s.upcase %>
<% logo = team_logo_path(abbr) %>

<div class="flex h-full min-h-[128px] items-center rounded-xl border border-slate-300 bg-[#F1F3F6] p-4 shadow-sm transition group-hover:bg-[#F7F9FC] group-hover:shadow-md">
  <div class="flex w-full items-center gap-4">
    <% if logo.present? %>
      <%= image_tag logo,
        alt: "#{abbr} logo",
        class: "h-14 w-14 flex-none rounded-lg border border-slate-300 bg-white p-2 object-contain"
      %>
    <% else %>
      <div class="flex h-14 w-14 flex-none items-center justify-center rounded-lg border border-slate-300 bg-white text-sm font-black tracking-wide text-slate-800">
        <%= abbr.presence || "N/A" %>
      </div>
    <% end %>

    <div class="min-w-0">
      <div class="line-clamp-2 text-lg font-bold leading-tight text-slate-900">
        <%= player.respond_to?(:full_name) && player.full_name.present? ? player.full_name : "#{player.first_name} #{player.last_name}" %>
      </div>

      <div class="mt-2 inline-flex items-center rounded-md border border-slate-400 bg-slate-200 px-3 py-1 text-xs font-semibold tracking-wide text-slate-800">
        <%= abbr.presence || "No team" %>
      </div>
    </div>
  </div>
</div>
