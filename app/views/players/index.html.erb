<div class="min-h-screen bg-gradient-to-br from-amber-200 via-orange-200 to-amber-400">
  <div class="mx-auto max-w-6xl px-6 py-10">
    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
        <h1 class="text-4xl font-extrabold tracking-tight text-slate-900">Players</h1>
        <p class="mt-2 text-slate-700">
            Browse the league. Search by name or team.
        </p>
        </div>

        <form method="get" action="<%= players_path %>" class="mt-4 flex w-full flex-col gap-3 sm:mt-0 sm:w-auto sm:flex-row sm:items-center">
        <div class="relative w-full sm:w-[360px]">
            <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">âŒ•</span>
            <input
            type="text"
            name="q"
            value="<%= @q %>"
            placeholder="Search: Curry, LAL ..."
            class="w-full rounded-2xl border border-slate-900/10 bg-white/70 px-10 py-3 text-slate-900 placeholder:text-slate-500 shadow-sm outline-none ring-0 transition focus:-translate-y-0.5 focus:border-slate-900/20 focus:bg-white/85 focus:shadow-md"
            />
        </div>

        <div class="flex gap-3">
            <button
            type="submit"
            class="rounded-2xl bg-slate-900 px-5 py-3 font-extrabold text-white shadow-sm transition hover:-translate-y-0.5 hover:shadow-md active:translate-y-0"
            >
            Search
            </button>

            <% if @q.present? %>
            <%= link_to "Clear",
                players_path,
                class: "rounded-2xl border border-slate-900/10 bg-white/60 px-5 py-3 font-extrabold text-slate-900 shadow-sm transition hover:-translate-y-0.5 hover:bg-white/80 hover:shadow-md"
            %>
            <% end %>
        </div>
        </form>
    </div>

    <div class="mt-8 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        <% @players.each do |player| %>
        <%= link_to player_path(player), class: "group block h-full" do %>
            <%= render "player_card", player: player %>
        <% end %>
        <% end %>
    </div>
  </div>
</div>
