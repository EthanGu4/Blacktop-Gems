<div class="min-h-screen bg-[#F6F1E7]">
  <!-- simple top rule -->
  <div class="h-px w-full bg-slate-300"></div>

  <div class="mx-auto max-w-6xl px-6 py-10">
    <div class="mb-6">
      <%= link_to "← Home",
        root_path,
        class: "text-sm font-semibold text-slate-700 hover:text-slate-900"
      %>
    </div>

    <div class="flex flex-col gap-6 sm:flex-row sm:items-end sm:justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight text-slate-900">Players</h1>
        <p class="mt-1 text-sm text-slate-600">
          Search by name or team
        </p>
      </div>

      <form method="get" action="<%= players_path %>" class="w-full sm:w-auto">
        <div class="flex w-full flex-col gap-2 sm:flex-row sm:items-center">
          <div class="relative w-full sm:w-[320px]">
            <input
              type="text"
              name="q"
              value="<%= @q %>"
              placeholder="Curry, LAL"
              class="w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 placeholder:text-slate-400 focus:border-slate-400 focus:outline-none"
            />
          </div>

          <div class="flex gap-2">
            <button
              type="submit"
              class="rounded-md bg-slate-800 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-700"
            >
              Search
            </button>

            <% if @q.present? %>
              <%= link_to "Clear",
                players_path,
                class: "rounded-md border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-100"
              %>
            <% end %>
          </div>
        </div>
      </form>
    </div>

    <div class="mt-6 flex items-center justify-between border-b border-slate-300 pb-2">
      <div class="text-xs font-medium text-slate-600">
        <%= @q.present? ? "Results for “#{@q}”" : "All players" %>
      </div>
      <div class="text-xs font-medium text-slate-600">
        <%= @players.size %> players
      </div>
    </div>

    <div class="mt-6">
      <div class="grid grid-cols-1 gap-3 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        <% @players.each do |player| %>
          <%= link_to player_path(player), class: "block" do %>
            <%= render "player_card", player: player %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
