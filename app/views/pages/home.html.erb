<div
  class="min-h-screen bg-cover bg-center bg-no-repeat"
  style="background-image: url('<%= asset_path("blacktop_gem_wallpaper.png") %>')"
>
  <div class="min-h-screen flex items-center justify-center bg-black/70">
    <div class="text-center px-6">
      <h1 class="text-5xl md:text-6xl font-extrabold tracking-tight text-white">
        Blacktop Gems
      </h1>

      <p class="mt-4 text-lg text-slate-300 max-w-xl mx-auto">
        Find the game beneath the surface
      </p>

      <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to "Browse Players",
          players_path,
          class: "px-8 py-3 rounded-full font-bold bg-orange-500 text-black hover:bg-orange-400 transition"
        %>

        <%= link_to "Find Hidden Gems",
          rankings_path,
          class: "px-8 py-3 rounded-full font-bold border border-white/30 text-white hover:bg-white/10 transition"
        %>
      </div>
    </div>
  </div>
</div>
