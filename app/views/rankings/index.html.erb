<div class="min-h-screen bg-[#F6F1E7]">
  <div class="h-px w-full bg-slate-300"></div>

  <div class="mx-auto max-w-6xl px-6 py-10">
    <div class="mb-6">
      <%= link_to "â† Home",
        root_path,
        class: "text-sm font-semibold text-slate-700 hover:text-slate-900"
      %>
    </div>

    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight text-slate-900">
          Hidden Gems
        </h1>
        <p class="mt-1 text-sm text-slate-600">
          Find the best players & sleeper picks across the league.
        </p>
      </div>
    </div>

    <form method="get"
          action="<%= rankings_path %>"
          class="mt-6 rounded-lg border border-slate-300 bg-white p-4">
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-4 lg:grid-cols-8">
        <% sliders = {
          fg:  "FG%",
          ft:  "FT%",
          fg3: "3P%",
          reb: "REB",
          ast: "AST",
          stl: "STL",
          blk: "BLK",
          pts: "PTS"
        } %>

        <% sliders.each do |key, label| %>
          <div class="flex flex-col gap-1">
            <label class="text-xs font-semibold text-slate-700">
              <%= label %>
            </label>

            <input
              type="range"
              name="<%= key %>"
              min="0"
              max="10"
              step="1"
              value="<%= @weights[key] || 1 %>"
              class="accent-slate-800"
            />

            <div class="text-[11px] text-slate-500">
              <%= @weights[key] || 1 %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-4 flex justify-end">
        <button
          type="submit"
          class="rounded-md bg-slate-800 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-700"
        >
          Update
        </button>
      </div>
    </form>

    <section class="mt-10">
      <div class="flex items-end justify-between border-b border-slate-300 pb-2">
        <h2 class="text-xl font-bold text-slate-900">
          Top Players
        </h2>
      </div>

      <div class="mt-4 grid grid-cols-1 gap-3 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        <% @top_players.each do |player| %>
          <%= link_to player_path(player), class: "block h-full" do %>
            <%= render "players/player_card", player: player %>
          <% end %>
        <% end %>
      </div>
    </section>

    <section class="mt-12">
      <div class="flex items-end justify-between border-b border-slate-300 pb-2">
        <h2 class="text-xl font-bold text-slate-900">
          ABSOLUTE SLEEPERS
        </h2>
      </div>

      <div class="mt-4 grid grid-cols-1 gap-3 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        <% @hot_players.each do |player| %>
          <%= link_to player_path(player), class: "block h-full" do %>
            <%= render "players/player_card", player: player %>
          <% end %>
        <% end %>
      </div>
    </section>
  </div>
</div>
